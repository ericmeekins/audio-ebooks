import SiteLayout from '../layouts/SiteLayout.astro';
const posts = (await Astro.glob('/src/pages/blog/*.md'))
  .sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate))
  .slice(0, 5);
