---
import SiteLayout from '../../layouts/SiteLayout.astro';
const posts = (await Astro.glob('./*.md'))
  .sort((a, b) => new Date(b.frontmatter.pubDate) - new Date(a.frontmatter.pubDate));
---
<SiteLayout title="All Book Notes | Audio Ebooks" description="Browse all audiobook notes and reading summaries.">
  <h1>All Book Notes</h1>
  <section style="display:grid;grid-template-columns:repeat(auto-fit,minmax(260px,1fr));gap:20px">
    {posts.map((p) => (
      <article style="background:#f8fafc;border:1px solid #e5e7eb;border-radius:14px;padding:20px">
        <h2 style="margin-top:0;font-size:1.2rem"><a href={p.url}>{p.frontmatter.title}</a></h2>
        <p style="color:#6b7280;margin:.2rem 0 .8rem 0">{new Date(p.frontmatter.pubDate).toDateString()}</p>
        <p>{p.frontmatter.description}</p>
      </article>
    ))}
  </section>
</SiteLayout>
