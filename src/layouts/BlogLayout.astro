---
import SiteLayout from './SiteLayout.astro';
const { title = "Untitled", description = "", pubDate } = Astro.props;
---
<SiteLayout title={title} description={description}>
  <article>
    <h1>{title}</h1>
    {pubDate && <p style="color:#6b7280">{new Date(pubDate).toDateString()}</p>}
    <slot />
  </article>
</SiteLayout>
